{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@middleware/*": ["middleware/*"],
      "@helper/*": ["helper/*"],
      "@lib/*": ["lib/*"],
      "@select/*": ["select/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@db/*":["db/*"],
    },
    "outDir": "./dist",
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true

  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
  
}
